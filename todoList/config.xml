<?xml version='1.0' encoding='utf-8'?>
<widget id="io.cordova.hellocordova" version="1.0.0" xmlns="http://www.w3.org/ns/widgets" xmlns:cdv="http://cordova.apache.org/ns/1.0">
    <name>TodoList</name>
    <description>
        A simple Todo list app for mobile implemented in JS with the Onsen UI framework.
    </description>
    <author email="sacha.thommet5@orange.fr">Sacha Thommet @IUTNC</author>
    <author>Gauthier Mayer @IUTNC</author>

    <content src="index.html" />
    <plugin name="cordova-plugin-whitelist" spec="1" />
    <access origin="*" />
    <allow-intent href="http://*/*" />
    <allow-intent href="https://*/*" />
    <allow-intent href="tel:*" />
    <allow-intent href="sms:*" />
    <allow-intent href="mailto:*" />
    <allow-intent href="geo:*" />
    <platform name="android">


        <!-- SPLASH SCREEN -->
        <splash src="www/img/appIcon.png" density="land-hdpi"/>
        <splash src="www/img/appIcon.png" density="land-ldpi"/>
        <splash src="www/img/appIcon.png" density="land-mdpi"/>
        <splash src="www/img/appIcon.png" density="land-xhdpi"/>
        <splash src="www/img/appIcon.png" density="land-xxhdpi"/>

        <splash src="www/img/appIcon.png" density="port-hdpi"/>
        <splash src="www/img/appIcon.png" density="port-ldpi"/>
        <splash src="www/img/appIcon.png" density="port-mdpi"/>
        <splash src="www/img/appIcon.png" density="port-xhdpi"/>
        <splash src="www/img/appIcon.png" density="port-xxhdpi"/>

        <allow-intent href="market:*" />
    </platform>
    <platform name="ios">
        <allow-intent href="itms:*" />
        <allow-intent href="itms-apps:*" />
    </platform>

    <icon src="www/img/appIcon.png"/>

    <!-- SPLASH SCREEN -->
    <preference name="FadeSplashScreenDuration" value="1000"/>
    <preference name="SplashScreenDelay" value="1200"/>
</widget>
